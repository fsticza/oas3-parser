{
  "openapi": "3.0.1",
  "info": {
    "version": "1.0.0",
    "title": "Powershare",
    "description": "Powershare OpenAPI 3.0.1 specification",
    "contact": {
      "name": "Dev Team",
      "email": "dev@ocoord.com",
      "url": "https://occooord.com/contact"
    },
    "license": {
      "name": "MIT",
      "url": "http://github.com/gruntjs/grunt/blob/master/LICENSE-MIT"
    }
  },
  "servers": [
    {
      "url": "https://ps-api.cm/api",
      "description": "Stationion environment"
    },
    {
      "url": "https://test.ps-api.cm/api",
      "description": "Test environment"
    },
    {
      "url": "https://dev.ps-api.cm/api",
      "description": "Development environment"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    },
    {
      "ApiKeyAuth": []
    }
  ],
  "paths": {
    "/auth/token": {
      "post": {
        "tags": [
          "auth"
        ],
        "security": [],
        "description": "Sign in. Returns a new token for correct credentials.",
        "operationId": "signIn",
        "requestBody": {
          "description": "Get a new token for valid credentials",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Credentials"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "sign in response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Token"
                }
              }
            }
          },
          "default": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "auth"
        ],
        "description": "Sign out. Detels the token",
        "operationId": "signOut",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "description": "ID of token",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "sign out response"
          },
          "default": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/users": {
      "post": {
        "tags": [
          "user"
        ],
        "description": "Registration / Sign up",
        "operationId": "signUp",
        "requestBody": {
          "description": "User payload",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewAccount"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "user response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Account"
                }
              }
            }
          },
          "default": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "tags": [
          "user"
        ],
        "description": "Returns a user based on a single ID, if the user does not have access to data",
        "operationId": "showUser",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of user",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "user response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Account"
                }
              }
            }
          },
          "default": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/stations": {
      "get": {
        "tags": [
          "station"
        ],
        "description": "List stations",
        "operationId": "listStations",
        "parameters": [
          {
            "name": "filter",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "offset",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Station list",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Station"
                  }
                }
              }
            }
          },
          "default": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "station"
        ],
        "description": "Create new Station",
        "operationId": "createStation",
        "requestBody": {
          "description": "Station payload",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewStation"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "station response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Station"
                }
              }
            }
          },
          "default": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/stations/{name}-{id}": {
      "get": {
        "tags": [
          "station"
        ],
        "description": "Show stations",
        "operationId": "showStation",
        "parameters": [
          {
            "name": "name",
            "in": "path",
            "description": "name of station",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "id",
            "in": "path",
            "description": "ID of station",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Station list",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Station"
                }
              }
            }
          },
          "default": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "in": "header",
        "scheme": "bearer",
        "bearerFormat": "JW"
      },
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "X-API-KEY"
      }
    },
    "schemas": {
      "Account": {
        "allOf": [
          {
            "$ref": "#/components/schemas/NewAccount"
          },
          {
            "required": [
              "id",
              "roles"
            ],
            "properties": {
              "id": {
                "type": "string"
              },
              "roles": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        ]
      },
      "NewAccount": {
        "allOf": [
          {
            "$ref": "#/components/schemas/Credentials"
          },
          {
            "required": [
            ],
            "properties": {
              "firstName": {
                "type": "string"
              },
              "lastName": {
                "type": "string"
              },
              "title": {
                "type": "string"
              }
            }
          }
        ]
      },
      "Credentials": {
        "required": [
          "email",
          "password"
        ],
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string",
            "format": "password"
          }
        }
      },
      "Token": {
        "required": [
          "id",
          "expiry"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "expiry": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Station": {
        "allOf": [
          {
            "$ref": "#/components/schemas/NewStation"
          },
          {
            "required": [
              "id"
            ],
            "properties": {
              "id": {
                "type": "string"
              }
            }
          }
        ]
      },
      "NewStation": {
        "required": [
          "title",
          "description",
          "locations",
          "addr",
          "kind",
          "limit"
        ],
        "properties": {
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "location": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Location"
            }
          },
          "kind": {
            "type": "string",
            "enum": [
              "science",
              "health"
            ]
          },
          "limit": {
            "type": "integer",
            "format": "int32"
          },
          "attendees": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Account"
            }
          }
        }
      },
      "Location": {
        "allOf": [
          {
            "$ref": "#/components/schemas/GeoLocation"
          }
        ],
        "required": [
          "street",
          "city",
          "state",
          "zip"
        ],
        "properties": {
          "street": {
            "type": "string",
            "example": "12345 El Monte Road"
          },
          "city": {
            "type": "string",
            "example": "Los Altos Hills"
          },
          "state": {
            "type": "string",
            "example": "CA"
          },
          "zip": {
            "type": "string",
            "example": "94022"
          }
        }
      },
      "GeoLocation": {
        "required": [
          "latitude",
          "longitue"
        ],
        "properties": {
          "latitude": {
            "type": "number",
            "format": "double"
          },
          "longitude": {
            "type": "number",
            "format": "double"
          }
        }
      },
      "Error": {
        "required": [
          "code",
          "message"
        ],
        "properties": {
          "code": {
            "type": "integer",
            "format": "int32"
          },
          "message": {
            "type": "string"
          }
        }
      }
    }
  }
}
